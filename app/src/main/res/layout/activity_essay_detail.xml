<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/font_color"
    tools:context=".view.essay.EssayDetailActivity">

<!--    <include android:id="@+id/header" layout="@layout/layout_activity_header"/>-->
    <ImageButton
        android:id="@+id/close"
        style="@style/ButtonStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:src="@drawable/ic_close"
        android:background="@color/transparent"
        android:tint="@color/back_dark"
        android:layout_width="@dimen/height_button"/>

    <com.cullen.tatu.view.ui.LinedTextView
        style="@style/TextViewStyle"
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_300"
        android:layout_marginTop="@dimen/vertical_list_normal"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginEnd="@dimen/horizontal_margin"
        android:textSize="@dimen/text_size_app_bar"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/close"
        android:textColor="@color/back_dark"
    />

    <TextView
       style="@style/TextViewStyle"
        android:id="@+id/nameView"
        android:layout_marginTop="@dimen/vertical_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contentView"
        android:layout_marginEnd="@dimen/_40dp"
        android:textSize="@dimen/text_size_big"
        android:textColor="@color/back_dark"
        />

    <TextView
        style="@style/TextViewStyle"
        android:id="@+id/dateView"
        android:layout_marginTop="@dimen/vertical_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameView"
        android:layout_marginEnd="@dimen/_40dp"
        android:textSize="@dimen/text_size_app_bar"
        android:textColor="@color/back_dark"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
