<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ActivityStyle"
    tools:context="com.cullen.tatu.view.essay.EssayCreateActivity">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/activity_header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_primary"
        app:titleTextColor="@color/color_text_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/contentView"
        android:layout_marginTop="@dimen/vertical_margin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_400"
        android:hint="写下自己认的心情"
        android:gravity="top"
        android:textColor="@color/color_text_sliver_dark"
        android:textColorHint="@color/color_text_sliver_light"
        android:background="@null"
        android:textSize="@dimen/text_size_subheading"/>

    <TextView
        style="@style/TextViewStyle"
        android:id="@+id/dateView"
        android:layout_marginBottom="@dimen/vertical_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/_40dp"
        android:text="路人甲"
        android:textSize="@dimen/text_size_app_bar"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
